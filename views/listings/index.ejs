<% layout("./layouts/boilerplate") %>
<style>
  #filters{
    display : flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter{
    text-align: center;
    margin-right : 2rem;
    margin-top:1rem;
    opacity:0.7;
  }
  .filter:hover{
    opacity:1;
    cursor:pointer;
  }
  .tax-info{
    display:none;
  }
  .toggle-switch{
    border:1px solid black;
    border-radius:1rem;
    height:3.25rem;
    padding:1rem;
    display:flex;
    align-items: center;
    margin-left:25rem;
  }
</style>
<body>
    <!-- <h3>All Listings</h3> -->
    <!-- <form method="GET" action="/listings/new">
        <button>Add New Listing</button>
    </form> -->
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Islands</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-temperature-three-quarters"></i></div>
        <p>Deserts</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="toggle-switch">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total After taxes</label>
        </div>
      </div>
    </div>
    <% if (allListing.length==0) { %>
      <div class="text-center mt-5">
        <h3>No listings available for "<%= filterType %>" ðŸ˜¢</h3>
        <p>Try selecting a different filter or add a new listing!</p>
        <a href="/listings">Back to Home page</a>
      </div>
    <% } else { %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
    <%for(listing of allListing){%>
    <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
        <div class="card-img-overlay">
          <i class="fa-solid fa-heart wishlist-icon <%= listing.isWishlisted ? 'text-danger' : '' %>" 
             data-id="<%= listing._id %>"></i>
        </div>
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%></b> <br>
            &#8377;<%=listing.price.toLocaleString('en-IN')%>/night
            <i class="tax-info"> &nbsp; &nbsp;+ 18% GST</i>
          </p>
        </div>
      </div>
    </a>
      <% } %>
    </div>
  <%}%>
</body>

<script>
  document.querySelectorAll('.filter').forEach(filter => {
      filter.addEventListener('click', () => {
          const filterType = filter.querySelector('p').innerText;
          window.location.href = `/listings/filter/${filterType}`;
      });
  });
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo = document.getElementsByClassName("tax-info");
    let textoftheSwitch = document.getElementsByClassName("form-check-label")[0];
    for(info of taxInfo){
      if(info.style.display != "inline"){
        info.style.display ="inline";
        textoftheSwitch.innerText = "Display Total before taxes";
        
      }else{
        info.style.display="none";
        textoftheSwitch.innerText = "Display Total after taxes";
      }
    }
  })
