<% layout("./layouts/boilerplate") %>

<style>
  #filters-container {
    display: flex;
    align-items: center;
    padding: 1rem;
    background-color: #f9f9f9;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin: 1rem 0;
    position: relative;
    z-index: 1;
  }

  #filters {
    display: inline-flex;
    align-items: center;
    overflow-x: auto;
    overflow-y: hidden;
    white-space: nowrap;
    scroll-behavior: smooth;
    margin-right: 1rem;
  }

  .filter {
    text-align: center;
    margin-right: 1.5rem;
    margin-top: 0.5rem;
    opacity: 0.8;
    flex-shrink: 0;
    transition: transform 0.3s, opacity 0.3s;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
    transform: scale(1.1);
  }

  .filter i {
    font-size: 1.5rem;
    color: #333;
  }

  .filter p {
    margin-top: 0.5rem;
    font-size: 0.9rem;
    color: #555;
  }

  .toggle-switch-container {
    background-color: #fff;
    padding: 0.5rem;
    border-radius: 1rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
  }

  .toggle-switch {
    border: 1px solid #ddd;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 0.5rem 1rem;
    display: flex;
    align-items: center;
    background-color: #fff;
  }

  .toggle-switch .form-check-input {
    cursor: pointer;
    margin-right: 0.5rem;
  }

  .toggle-switch .form-check-label {
    font-size: 0.9rem;
    color: #333;
    white-space: nowrap;
    line-height: 1;
  }

  #filters::-webkit-scrollbar {
    height: 8px;
  }

  #filters::-webkit-scrollbar-thumb {
    background-color: #ccc;
    border-radius: 10px;
  }

  #filters::-webkit-scrollbar-thumb:hover {
    background-color: #999;
  }

  .tax-info {
    display: none;
  }
</style>

<body>
  <!-- Filters Section -->
  <div id="filters-container">
    <div id="filters">
      <!-- Filter items -->
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Islands</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-temperature-three-quarters"></i></div>
        <p>Deserts</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Urban</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Forest</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-house"></i></div>
        <p>Cabins</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-water"></i></div>
        <p>Lakes</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-spa"></i></div>
        <p>Spa</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-hiking"></i></div>
        <p>Hiking</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Igloos</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-crown"></i></div>
        <p>Luxury</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tent"></i></div>
        <p>Glamping</p>
      </div>

    </div>

    <!-- Toggle Switch -->
    <div class="toggle-switch">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total After taxes</label>
      </div>
    </div>
  </div>

  <!-- Search Results Section -->
  <% if (typeof query !== 'undefined') { %>
    <h1>Search Results for "<%= query %>"</h1>

    <% if (listings.length > 0) { %>
      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
        <% listings.forEach(listing => { %>
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
              <div class="card-img-overlay">
                <i class="fa-solid fa-heart wishlist-icon <%= listing.isWishlisted ? 'text-danger' : '' %>" data-id="<%= listing._id %>"></i>
              </div>
              <div class="card-body">
                <p class="card-text">
                  <b><%= listing.title %></b> <br>
                  &#8377;<%= listing.price.toLocaleString('en-IN') %>/night
                  <i class="tax-info"> &nbsp; &nbsp;+ 18% GST</i>
                </p>
              </div>
            </div>
          </a>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center mt-5">
        <h3>No results found for "<%= query %>" ðŸ˜¢</h3>
        <p>Try searching with a different keyword or browse all listings.</p>
        <a href="/listings">Back to Home page</a>
      </div>
    <% } %>
  <% } else if (typeof allListing !== 'undefined') { %>

    <!-- Listings Section -->
    <% if (allListing.length === 0) { %>
      <div class="text-center mt-5">
        <% if (typeof filterType !== 'undefined') { %>
          <h3>No listings available for "<%= filterType %>" ðŸ˜¢</h3>
        <% } else { %>
          <h3>No listings available ðŸ˜¢</h3>
        <% } %>
        <p>Try selecting a different filter or add a new listing!</p>
        <a href="/listings">Back to Home page</a>
      </div>
    <% } else { %>
      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
        <% allListing.forEach(listing => { %>
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
              <div class="card-img-overlay">
                <i class="fa-solid fa-heart wishlist-icon <%= listing.isWishlisted ? 'text-danger' : '' %>" data-id="<%= listing._id %>"></i>
              </div>
              <div class="card-body">
                <p class="card-text">
                  <b><%= listing.title %></b> <br>
                  &#8377;<%= listing.price.toLocaleString('en-IN') %>/night
                  <i class="tax-info"> &nbsp; &nbsp;+ 18% GST</i>
                </p>
              </div>
            </div>
          </a>
        <% }) %>
      </div>
    <% } %>
  <% } %>
</body>

<script>
  // Filter click event
  document.querySelectorAll('.filter').forEach(filter => {
    filter.addEventListener('click', () => {
      const filterType = filter.querySelector('p').innerText;
      window.location.href = `/listings/filter/${filterType}`;
    });
  });

  // Tax info toggle switch
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    const taxInfo = document.getElementsByClassName("tax-info");
    const switchLabel = document.getElementsByClassName("form-check-label")[0];
    for (const info of taxInfo) {
      info.style.display = info.style.display === "inline" ? "none" : "inline";
    }
    switchLabel.innerText = taxSwitch.checked ? "Display total Before taxes" : "Display total After taxes";
  });

  // Wishlist icon click event
  document.querySelectorAll('.wishlist-icon').forEach(icon => {
    icon.addEventListener('click', async function() {
      const listingId = this.getAttribute('data-id');
      const isWishlisted = this.classList.contains('text-danger');
      const method = isWishlisted ? 'DELETE' : 'POST';

      try {
        const response = await fetch(`/wishlist/${listingId}`, { method });
        const result = await response.json();

        if (response.ok) {
          this.classList.toggle('text-danger', !isWishlisted);
        } else {
          console.error(result.message);
        }
      } catch (error) {
        console.error('Error:', error);
      }
    });
  });
</script>
