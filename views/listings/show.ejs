  <head>
    <style>
      .show-img {
        height: 30vh;
        object-fit: cover;
        /* Ensure image covers the area without distortion */
      }

      .edit-btn {
        background-color: #fe424d;
        /* Custom color */
        color: white;
        /* Text color */
        border: none;
        /* Remove border */
        border-radius: 8px;
        /* Rounded corners */
        width: 4rem;
        margin-right: 6rem;
      }

      .edit-btn:hover {
        background-color: #e03a4a;
        /* Slightly darker color on hover */
      }

      .listing-card {
        margin-bottom: 20px;
      }

      .btn-block {
        width: 100%;
      }

      /* Media Queries */
      @media (max-width: 768px) {
        .show-img {
          height: 25vh;
          /* Adjust image height on smaller screens */
        }

        .col-8,
        .col-6 {
          width: 100%;
          /* Make columns full width on mobile */
        }

        .offset-3 {
          margin-left: 0;
          /* Remove offsets on mobile */
        }

        .btns {
          width: 50%;
          display: flex;
          justify-content: space-between;
          align-items: center;
          /* Center buttons */
        }

        .btn-block {
          margin-top: 10px;
        }

        #map {
          height: 30vh;
          /* Adjust map height on smaller screens */
          width: 100%;
          /* Ensure map takes full width */
          overflow: hidden;
          /* Prevent overflow */
        }

        .starability-heartbeat label {
          font-size: 1.2rem;
          /* Increase star size on mobile */
        }
      }

      @media (max-width: 576px) {
        .show-img {
          height: 20vh;
          /* Further reduce image height on very small screens */
        }

        .card-body {
          padding: 10px;
          /* Reduce padding inside cards on small screens */
        }

        .btn-block {
          margin-top: 5px;
        }

        #map {
          height: 25vh;
          /* Further reduce map height on very small screens */
        }
      }

      /* Prevent horizontal scrolling */
      body {
        overflow-x: hidden;
      }
    </style>
  </head>

  <body>
    <div class="row mt-3">
      <div class="col-8 offset-3">
        <h3>
          <%=listing.title%>
        </h3>
      </div>
    </div>
    <div class="row">
      <div class="col-6 offset-3">
        <div class="card listing-card">
          <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">
          <div class="card-body">
            <p class="card-text">Owned by <i>
                <%=listing.owner.username%>
              </i></p>
            <p class="card-text">
              <%=listing.description%>
            </p>
            <p class="card-text"><%=listing.price.toLocaleString('en-IN')%>/night</p>
            <p class="card-text">
              <%=listing.location%>, <%=listing.country%>
            </p>
          </div>
        </div>
        <div class="col-6 offset-3">
          <% if (currUser && !listing.owner._id.equals(currUser._id)) { %>
            <form mathod="GET" action="/book/<%= listing._id %>">
              <button type="submit" class="btn book-btn btn-primary">Book Now</button>
            </form>
            <%}%>
        </div>
      </div>
      <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="btns col-8 offset-3">
          <div>
            <form method="GET" action="/listings/<%=listing._id%>/edit">
              <button type="submit" class="btn edit-btn">Edit</button>
            </form>
          </div>
          <div class="dlt-btn">
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
              <button type="submit" class="btn btn-dark btn-block">Delete</button>
            </form>
          </div>
        </div>
        <% } %>

          <div class="col-8 offset-3 mb-3">
            <hr>
            <% if (currUser) { %>
              <h4>Leave a Review</h4>
              <form action="/listings/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mt-3 mb-3">
                  <label for="rating" class="form-label">Rating</label>
                  <fieldset class="starability-heartbeat">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                      aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>
                <div class="mt-3 mb-3">
                  <label for="comment" class="form-label">Comment</label>
                  <textarea name="review[comment]" id="comment" rows="5" cols="30" class="form-control"
                    required></textarea>
                  <div class="invalid-feedback">Please Write a Comment for Posting a Review</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
              </form>
              <hr>
              <% } %>

                <div class="row">
                  <p><b>All Reviews</b></p>
                  <% if (listing.reviews.length <=0) { %>
                    <p>No reviews yet.</p>
                    <% } else { %>
                      <% for (let review of listing.reviews) { %>
                        <div class="card col-5 ms-3 mb-3">
                          <h5 class="card-title">@<%= review.author.username %>
                          </h5>
                          <p class="starability-result" data-rating="<%= review.rating %>"></p>
                          <p class="card-text">
                            <%= review.comment %>
                          </p>
                          <form class="mb-3" method="POST"
                            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-sm btn-dark">Delete</button>
                          </form>
                        </div>
                        <% } %>
                          <% } %>
                            <hr>
                </div>
          </div>
          <div class="col-8 offset-3 mb-3">
            <h3>Where you'll be</h3>
            <div id="map"></div>
          </div>
    </div>
  </body>
  <script src="/js/map.js"></script>
