<% layout("./layouts/boilerplate") %>

<head>
    <style>
        .payment-container {
            max-width: 600px;
            margin: auto;
            text-align: center;
        }

        .btn-pay {
            background-color: #fe424d;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="payment-container mt-4">
        <h3>Payment for Your Booking</h3>
        <p><strong>Name:</strong> <%= booking.name %></p>
        <p><strong>Email:</strong> <%= booking.email %></p>
        <p><strong>Check-In:</strong> <%= booking.checkIn.toDateString() %></p>
        <p><strong>Check-Out:</strong> <%= booking.checkOut.toDateString() %></p>
        <p><strong>Total Price:</strong> â‚¹<%= booking.totalPrice %></p>

        <!-- Form to send booking data to backend -->
        <form action="/process_payment" method="POST">
            <input type="hidden" name="bookingId" value="<%= booking._id %>">
            <button type="submit" class="btn-pay">Proceed to Payment</button>
        </form>
    </div>
</body>
